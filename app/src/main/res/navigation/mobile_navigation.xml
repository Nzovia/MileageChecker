<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.nicholas.mileagechecker.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_show"
        android:name="com.nicholas.mileagechecker.ui.dashboard.DashboardFragment"
        android:label="Cars"
        tools:layout="@layout/fragment_cars" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.nicholas.mileagechecker.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_messages"
        android:name="com.nicholas.mileagechecker.ui.messages.MessagesFragment"
        android:label="title_messages"
        tools:layout="@layout/fragment_messages" />
</navigation>